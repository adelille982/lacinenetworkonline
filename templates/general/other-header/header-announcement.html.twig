{% if otherHeader %}
<header class="header-announcement">
  <img src="{{ asset('images/en-tete-de-page/autre/' ~ otherHeader.mainImageHeader) | imagine_filter('fullscreen') }}" alt="{{ otherHeader.titleHeader }}" class="img-header-announcement" loading="lazy" />
  <div class="header-announcement-overlay"></div>
  <div class="header-announcement-content">
    <h1 class="title-header-announcement">{{ otherHeader.titleHeader|striptags }}</h1>
    {% if otherHeader.sloganHeader is not empty %}
      <p class="subtitle-header-announcement">{{ otherHeader.sloganHeader|striptags }}</p>
    {% endif %}
  </div>
</header>
{% endif %}
