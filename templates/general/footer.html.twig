<footer>
  <i class="bi bi-arrow-up-circle icon-top-page"></i>

  <div class="footer-container-1">
    <div class="footer-container-1-left">
      <div>
        <img src="{{ asset('images/general/logo-pied-de-page.png') }}"
          alt="Logo" />
      </div>
      
      <ul class="footer-container-1-left-ul">
        <li><a href="{{ path('app_index') }}">LA CINÉ NETWORK</a></li>
        {% if firstFormationSlug %}
        <li>
          <a class="navbar-brand fw-bold" href="{{ path('app_net-pitch', { slug: firstFormationSlug }) }}">
            NOS FORMATIONS
          </a>
        </li>
        {% endif %}
        <li><a href="{{ path('app_home_blog') }}">BLOG</a></li>
        <li><a href="{{ path('app_about') }}">À PROPOS</a></li>
        <li><a href="{{ path('app_index') }}#nous-contacter">CONTACT</a></li>
      </ul>
    </div>

    <div class="footer-container-1-right">
      <ul class="footer-container-1-right-ul">
        <li class="dropdown-footer">
          <span class="dropdown-toggle">OFFRES & CANDIDATURES</span>
          <ul class="dropdown-menu-footer">
            <li><a href="{{ path('app_announcement') }}">Annonces Audiovisuelles</a></li>
            {% if generalCineNetwork is defined and generalCineNetwork.shortFilmProposalHome %}
            <li><a href="{{ path('app_index') }}#open-shortfilm-popup" class="open-shortfilm-proposal">Proposez votre court-métrage</a></li>
            {% endif %}
            <li><a href="{{ path('app_postulate') }}">Postuler</a></li>
          </ul>
        </li>

        <li class="dropdown-footer">
          <span class="dropdown-toggle">MON COMPTE</span>
          <ul class="dropdown-menu-footer">
            <li><a href="{{ path('app_login') }}">Connexion</a></li>
            <li><a href="{{ path('app_register') }}">Inscription</a></li>
            {% if
              (app.user and is_granted('ROLE_USER_NETWORK'))
                or is_granted('ROLE_ADMIN')
                or is_granted('ROLE_SUB_ADMIN')
                or is_granted('ROLE_SUB_ADMIN_FORMATION')
                or is_granted('ROLE_SUB_ADMIN_ANNOUNCEMENT')
                or is_granted('ROLE_SUB_ADMIN_EVENT')
                or is_granted('ROLE_SUB_ADMIN_BLOG')
                or is_granted('ROLE_SUB_ADMIN_COMMENTARY')
                or is_granted('ROLE_SUB_ADMIN_GESTION') %}
              <li>
                <a class="dropdown-item" href="{{ path('app_account') }}">
                  Mon compte
                </a>
              </li>
            {% endif %}

            {% if app.user %}
              <li>
                <a class="dropdown-item" href="{{ path('app_logout') }}">
                  Déconnexion
                </a>
              </li>
            {% endif %}
          </ul>
        </li>
      </ul>
    </div>
  </div>

  <div class="footer-container-2">
    <div class="footer-container-2-left">
      <div>
        <p>
          Copyright © 2025 LACINENETWORK | Site produit par
          <span class="tooltip-email" data-tooltip="a.delille982@gmail.com">Delille Anthony</span> &
          <span class="tooltip-email" data-tooltip="achamanakevin.dev@gmail.com">Achamana Kévin</span>
          | Photographsix
        </p>
      </div>
      <div class="footer-container-2-left-right">
        <a href="{{ path('app_rgpd') }}" class="rgpd-link"><strong>RGPD</strong></a>
        {% if generalCineNetwork.linkInstagram %}
          <a href="{{ generalCineNetwork.linkInstagram }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="bi bi-instagram social-footer-icon"></i>
          </a>
        {% endif %}

        {% if generalCineNetwork.linkFacebook %}
          <a href="{{ generalCineNetwork.linkFacebook }}" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <i class="bi bi-facebook social-footer-icon"></i>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>
